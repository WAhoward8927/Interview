@model Interview.ViewModels.DetailViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>OrderListDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        @for (int i = 0; i < Model.Details.Count; i++)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Details[i].photo)
            </dt>
            <dd>
                <img src="@Url.Content("~/Image/" + Model.Details[i].photo+".jpg")" width="300px"/>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Details[i].description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Details[i].description)
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index", "OrderList")
</p>
